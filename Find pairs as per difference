//Problem 
//5 2        : n integers, difference that you have to find between any 2 integers of array.
//1 5 3 4 2 
//This code should be done in O(nlog n).
#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

int main()
{
    int n, count=0;
    int k;
    cin >>n >>k;
    vector<int> vec(n);
    generate(vec.begin(), vec.end(), []{int temp; cin>>temp; return temp;});
    sort(vec.begin(), vec.end());   
    for(int i=0; i<n; i++){
        int temp = vec[i]+k;
        int low = 0, high =n-1;
        //cout<<"vec[i] = "<<vec[i]<<"\ttemp = "<<temp<<endl;
        while(low<=high)
        {
            int mid = (low+high)/2;
            if(vec[mid] == temp){
                count++;
                break;}
            else if(vec[mid] < temp)
                low = mid+1;
            else if(vec[mid] > temp)
                high = mid-1;
        }
    }
    cout<<count;
    return 0;
}
